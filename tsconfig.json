{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "rootDirs": [
      "src"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "types": [
      "jest",
      "react",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2017.object"
    ],
    "baseUrl": "./src",
    "paths": {
      "assets/*": [
        "assets/*"
      ],
      "store/*": [
        "store/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "components/*": [
        "components/*"
      ],
      "config/*": [
        "config/*"
      ],
      "features/*": [
        "features/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "locale/*": [
        "locale/*"
      ],
      "gql/*": [
        "gql/*"
      ]
    },
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
